<?xml version="1.0"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
		<property name="connection.url">jdbc:sqlserver://localhost;databaseName=POC_H05_filters_annotation</property>
		<property name="connection.username">sa</property>
		<property name="connection.password">boolbee</property>
		<property name="dialect">org.hibernate.dialect.SQLServerDialect</property>

		<!-- set up c3p0 for use -->
		<property name="c3p0.max_size">10</property>
		<property name="show_sql">true</property>
		<property name="hbm2ddl.auto">create</property>

		<mapping class="team.boolbee.poc.hibernate.filters.model.Salesperson" />
		<mapping class="team.boolbee.poc.hibernate.filters.model.Sale" />
	</session-factory>
</hibernate-configuration>