	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="annotatedClasses">
			<list>
				<value>team.boobee.poc.spring.hibernate.domain.Rant</value>
				<value>team.boobee.poc.spring.hibernate.domain.Motorist</value>
				<value>team.boobee.poc.spring.hibernate.domain.Vehicle</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">${hibernate.dialect}</prop>
			</props>
		</property>
	</bean>

	<bean id="hibernateTemplate" class="org.springframework.orm.hibernate3.HibernateTemplate">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<bean id="rantDao" class="team.boobee.poc.spring.hibernate.dao.HibernateRantDaoUsingTemplate">
		<property name="hibernateTemplate" ref="hibernateTemplate" />
	</bean>



</beans>