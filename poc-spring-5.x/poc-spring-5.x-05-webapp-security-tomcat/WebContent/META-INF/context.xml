<?xml version="1.0" encoding="UTF-8"?>
<Context path="/poc-spring-5.x-05-webapp-security-tomcat">
	<Realm className="org.apache.catalina.realm.JDBCRealm"
		connectionName="${db.username}"
		connectionPassword="${db.password}"
		connectionURL="${db.url}"
		driverName="${db.driver}"
		digest="MD5"
		roleNameCol="authority"
		userCredCol="password"
		userNameCol="username"
		userRoleTable="tomcat_authorities"
		userTable="tomcat_users" />
</Context>